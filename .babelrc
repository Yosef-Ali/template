{
  "presets": [
    ["@babel/env", {
      "modules": false,
      "targets": {
        "browsers": "> 1%",
      },
      "useBuiltIns": "entry"
    }],
    "@babel/stage-0",
    "@babel/react"
  ],

  "plugins": [
    "lodash",
    ["module-resolver", {
      "root": "./app",
      "alias": {
        "config": "./config"
      }
    }],
    ["@babel/plugin-proposal-class-properties", { 
      "loose": true 
    }],
    ["react-css-modules", { 
      "context": "./",
      "filetypes": {
        ".sass": { 
          "syntax": "sugarss",
          "plugins": [
            "autoprefixer"
          ]
        }
      }
    }]
  ]
}